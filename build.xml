<?xml version="1.0" encoding="utf-8"?>
<project name="learning-phing" default="hello">
  <property name="name" value="world" override="true" />

  <target name="hello">
    <echo msg="hello, ${name}" />
  </target>

  <target name="goodbye" depends="hello">
    <echo msg="goodbye" />
  </target>
</project>

